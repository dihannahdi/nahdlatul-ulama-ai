# Environment variables for Nahdlatul Ulama AI Backend

# LLM API Keys (set one of these)
# Environment Configuration for Nahdlatul Ulama AI

# Required: Groq API Key for LLM
GROQ_API_KEY=your_groq_api_key_here

# Production Configuration (Railway will set these automatically)
RAILWAY_ENVIRONMENT_NAME=production
PORT=8000
PRODUCTION=true

# Debug mode (optional)
DEBUG=false

# Railway Configuration (set automatically)
RAILWAY_PROJECT_ID=
RAILWAY_SERVICE_ID=
RAILWAY_DEPLOYMENT_ID=
GOOGLE_API_KEY=your_google_api_key_here

# Database settings
CHROMA_PERSIST_DIRECTORY=./chroma_db

# API settings  
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS settings
ALLOWED_ORIGINS=*
